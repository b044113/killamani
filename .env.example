# AstroJoy Platform - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://astrojoy:your_password_here@postgres:5432/astrojoy
POSTGRES_PASSWORD=your_password_here

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://redis:6379/0

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# ASTROLOGY CALCULATOR
# ============================================================================
# Options: kerykeion, flatlib
CALCULATOR_PROVIDER=kerykeion

# Options: placidus, koch, equal, whole_sign
DEFAULT_HOUSE_SYSTEM=placidus

# Orb configuration (degrees)
ORB_CONJUNCTION=8.0
ORB_OPPOSITION=8.0
ORB_TRINE=8.0
ORB_SQUARE=7.0
ORB_SEXTILE=6.0
ORB_SEMISQUARE=3.0
ORB_SESQUIQUADRATE=3.0
ORB_QUINCUNX=3.0

# ============================================================================
# STORAGE
# ============================================================================
# Options: local, s3, azure
STORAGE_PROVIDER=local
STORAGE_PATH=/app/storage

# If using S3:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=astrojoy-charts

# ============================================================================
# CHART INTERPRETER
# ============================================================================
# Options: rule_based, ai, hybrid
INTERPRETER_PROVIDER=rule_based

# If using AI interpreter:
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# APPLICATION
# ============================================================================
# Options: development, staging, production
ENVIRONMENT=development

# Options: debug, info, warning, error, critical
LOG_LEVEL=info

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost

# ============================================================================
# FRONTEND
# ============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_DEFAULT_LANGUAGE=en

# ============================================================================
# EMAIL (Optional - for password reset, etc.)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@astrojoy.com

# ============================================================================
# MONITORING & LOGGING (Optional)
# ============================================================================
# SENTRY_DSN=https://...
# SENTRY_ENVIRONMENT=production

# ============================================================================
# RATE LIMITING (Optional)
# ============================================================================
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_PER_HOUR=1000
